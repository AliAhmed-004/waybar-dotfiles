{
    "layer": "top",

    // Margins 
    "margin-left": 10,
    "margin-right": 10,
    "margin-top": 8,
    "margin-bottom": 8,

    // minimal height, let waybar decide
    "height": 0, 

    "modules-left": [
        "niri/workspaces",
        "hyprland/workspaces",
    ],
    "modules-center": [
        "power-profiles-daemon",
        "clock",
        "bluetooth",
    ],
    "modules-right": [
        "custom/wfrec",
        "network",
        "pulseaudio",
        "battery",
    ],
    "clock": {
        // Example: "Tue 23 Jun 2024 02:55 AM/PM"
        "format": "{:%I:%M %p}",
        "tooltip": false
    },
    "battery": {
        "bat": "BAT0",
        "interval": 60,
        "states": {
            "warning": 25,
            "critical": 10
        },
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}% {icon} ⚡",
        "format-discharging": "{capacity}% {icon}",
        "format-full": "{capacity}% ",
        "format-icons": [
            "",
            "",
            "",
            "",
            ""
        ],
        "max-length": 25
    },
    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}",
        "format-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "phone-muted": "",
            "portable": "",
            "car": "",
            "default": [
                "",
                ""
            ]
        },
        "scroll-step": 1,
        "on-click": "pavucontrol",
        "ignored-sinks": [
            "Easy Effects Sink"
        ]
    },
    "network": {
        "interface": "wlan0",
        "format": "{ifname}",
        "format-wifi": "{essid} ",
        "format-ethernet": "{ipaddr}/{cidr} 󰊗",
        "format-disconnected": "󰖪 disconnected",
        "on-click": "kitty -e impala",
        "max-length": 50
    },
    "niri/workspaces": {
        "format": "{icon}"
    },
    "hyprland/workspaces": {
      "persistent-workspaces": {
        "*": 5, // 5 workspaces by default on every monitor
        "HDMI-A-1": 3 // but only three on HDMI-A-1
      }
    },
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}",
        "tooltip": true,
        "format-icons": {
            "default": "",
            "performance": "󰑮",
            "balanced": "",
            "power-saver": ""
        }
    },
    "bluetooth": {
        "format": "",
        "format-disabled": "󰂲",
        "format-connected": "󰂱",
        "tooltip-format": "{controller_alias}\t{controller_address}",
        "tooltip-format-connected": "{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "on-click": "blueman-manager"
    },
    "custom/wfrec": {
      "exec": "~/.local/bin/wf-status.sh",
      "interval": 1,
      "tooltip": false
    }
}
